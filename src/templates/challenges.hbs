<table class="mdl-cell mdl-data-table mdl-js-data-table mdl-cell--12-col">
    <tr>
        <th>Challenge</th>
        <th>Type</th>
        <th>Status</th>
        <th>Users</th>
    </tr>
    {{#each challenges}}
    <tr class="back-{{status}} challenge-row" data-id="{{uid}}">
        <td>{{name}}</td>
        <td>{{type}}</td>
        <td>{{status}}</td>
        <td>
            {{#each users}}
                {{userIcon @key}}
            {{/each}}
        </td>
    </tr>
    {{/each}}
</table>



<dialog id="dialog" class="mdl-dialog">
    <h3 class="mdl-dialog__title">Create a challenge</h3>
    <div class="mdl-dialog__content">
        <div class="mdl-textfield mdl-js-textfield mdl-cell--12-col">
            <input class="mdl-textfield__input" type="text" id="challenge-name">
            <label class="mdl-textfield__label" for="challenge-name">Challenge name</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-cell--12-col">
            <textarea class="mdl-textfield__input" type="text" id="challenge-description"></textarea>
            <label class="mdl-textfield__label" for="challenge-description">Description</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-cell--12-col">
            <input class="mdl-textfield__input" type="text" id="challenge-type">
            <label class="mdl-textfield__label" for="challenge-type">Type</label>
        </div>
    </div>
    <div class="mdl-dialog__actions">
        <button type="button" class="mdl-button" id="upload_close">Close</button>
        <button type="button" class="mdl-button" id="upload_upload">Create</button>
    </div>
</dialog>

<button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored bottom-right-add">
    <i class="material-icons">add</i>
</button>